<aura:component controller="taskController">
    <aura:handler name="render" action="{!c.doInit}" value="{!this}" />
    <aura:attribute name="theTask" type="Task" />
    <aura:attribute name="taskName" type="String" /> <!-- AM - can probably change this to a Task type -->
    <aura:attribute name="taskStatus" type="String" />
    <aura:attribute name="arrayIndex" type="Integer" />
    <tr>
        <td data-label="Task">
            <div class="slds-truncate"><a href="{!'/lightning/r/Task/' + v.theTask.Id + '/view'}">{!v.arrayIndex}. {!v.taskName}</a></div>
        </td>
        <td data-label="Status">
            <select label="Task Status" class="statusSelectMenu"> <!-- AM - use aura:iteration to get the task field values and put class='slds-select'. Also use controller to set default value? -->
                <option value="Not Started">Not Started</option>
                <option value="In Progress">In Progress</option>
                <option value="Completed">Completed</option>
                <option value="Waiting on someone else">Waiting on someone else</option>
                <option value="Deferred">Deferred</option>
            </select>
        </td>
        <td data-label="Action">
            <c:MarvickToDoDeleteButton arrayIndex="{!v.arrayIndex}" /> <!-- AM To Do - Update this name -->
        </td>
    </tr>
</aura:component>